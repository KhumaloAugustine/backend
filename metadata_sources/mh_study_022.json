  "schematype": "instrument",
  "instrument_details": {
    "item_count": 20,
    "response_scale": "0-4 (5-point Likert)",
    "total_score_range": "0-80",
    "cutoff_scores": "31-33: Suggested cutoff for PTSD diagnosis",
    "reliability": "Cronbach's alpha 0.94",
    "validity": "Sensitivity 95%, Specificity 94% for PTSD diagnosis"
