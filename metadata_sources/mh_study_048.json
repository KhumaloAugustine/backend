  "study_desc": {
    "title_statement": {
      "idno": "MH.INST.SDQ",
      "title": "SDQ: Strength and Difficulties Questionnaire",
      "subtitle": "25-item behavioral and emotional screening tool for children and youth"
    },
    "study_info": {
      "abstract": "The SDQ is a 25-item brief behavioral and emotional screening questionnaire for children aged 4-17 years. It measures both strengths and difficulties across five subscales: emotional symptoms, conduct problems, hyperactivity/inattention, peer problems, and prosocial behavior. Available in multiple languages and formats (self-report, parent, teacher).",
      "keywords": [
        {"keyword": "child behavioral assessment"},
        {"keyword": "emotional difficulties"},
        {"keyword": "conduct problems"},
        {"keyword": "ADHD screening"},
        {"keyword": "childhood mental health"}
      ]
    }
  },
  "instrument_details": {
    "instrument_name": "SDQ",
    "full_name": "Strength and Difficulties Questionnaire - 25 items",
    "measurement_target": "Behavioral and emotional difficulties in children and youth",
    "num_items": 25,
    "response_scale": "3-point Likert (0=Not true, 1=Somewhat true, 2=Certainly true)",
    "score_range": "0-40 (40 for total difficulties)",
    "subscales": ["Emotional Symptoms (5 items)", "Conduct Problems (5 items)", "Hyperactivity/Inattention (5 items)", "Peer Problems (5 items)", "Prosocial Behavior (5 items)"],
    "interpretation": "Normal 0-13; Borderline 14-16; Abnormal 17-40 (for total difficulties score)",
    "psychometric_properties": {
      "reliability": "Cronbach's alpha = 0.73",
      "validity": "Good discriminative validity for DSM diagnoses",
      "sensitivity": "0.70-0.75",
      "specificity": "0.95"
    },
    "populations": ["Children aged 4-17 years", "Clinical and community samples"],
    "languages": ["English", "Multiple languages available"]
  },
  "questions": [
    {
      "question_no": 1,
      "subscale": "Emotional Symptoms",
      "question_text": "I get a lot of headaches, stomach-aches or sickness",
