  "study_desc": {
    "title_statement": {
      "idno": "MH.INST.LSAS",
      "title": "LSAS: Liebowitz Social Anxiety Scale",
      "subtitle": "24-item self-report measure of social anxiety"
    },
    "study_info": {
      "abstract": "The LSAS is a 24-item self-report instrument designed to assess fear and avoidance associated with social interactions and public performance situations. It is widely used for assessing social anxiety disorder and monitoring treatment response. Each item is rated on separate scales for fear and avoidance.",
      "keywords": [
        {"keyword": "social anxiety"},
        {"keyword": "social phobia"},
        {"keyword": "anxiety disorders"},
        {"keyword": "social functioning"},
        {"keyword": "performance anxiety"}
      ]
    }
  },
  "instrument_details": {
    "instrument_name": "LSAS",
    "full_name": "Liebowitz Social Anxiety Scale - 24 items",
    "measurement_target": "Social anxiety disorder and social anxiety symptoms",
    "num_items": 24,
    "response_scale": "4-point Likert for Fear (0=None, 3=Severe) and Avoidance (0=Never, 3=Usually)",
    "score_range": "0-144",
    "interpretation": "0-30: Mild social anxiety; 31-60: Moderate; 61-90: Marked; 91-144: Severe",
    "subscales": ["Fear/Anxiety (24 items)", "Avoidance (24 items)"],
    "psychometric_properties": {
      "reliability": "Cronbach's alpha = 0.95",
      "validity": "High correlation with social anxiety disorder diagnosis",
      "sensitivity": "0.92-0.98",
      "specificity": "0.92-0.97"
    },
    "populations": ["Individuals with social anxiety", "Clinical samples", "Adolescents and adults"],
    "languages": ["English", "Multiple languages available"]
  },
