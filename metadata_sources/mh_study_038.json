  "study_desc": {
    "title_statement": {
      "idno": "MH.INST.MSPSS",
      "title": "MSPSS: Multidimensional Scale of Perceived Social Support",
      "subtitle": "12-item measure of perceived social support from family, friends, and significant others"
    },
    "study_info": {
      "abstract": "The MSPSS is a 12-item instrument designed to measure perceived social support from three sources: family, friends, and a significant other. It provides both total social support scores and subscale scores for each support source. The scale is widely used in research on stress, coping, mental health, and resilience.",
      "keywords": [
        {
          "keyword": "social support"
        },
        {
          "keyword": "perceived support"
        },
        {
          "keyword": "family support"
        },
        {
          "keyword": "resilience and coping"
        }
      ]
    }
  },
  "instrument_details": {
    "instrument_name": "MSPSS",
    "full_name": "Multidimensional Scale of Perceived Social Support",
    "measurement_target": "Perceived social support from multiple sources",
    "num_items": 12,
    "response_scale": "7-point Likert (Strongly disagree to Strongly agree)",
    "score_range": "12-84",
    "interpretation": "12-36: Low social support; 37-60: Moderate social support; 61-84: High social support",
    "subscales": [
      "Significant Other Support (4 items)",
      "Family Support (4 items)",
      "Friend Support (4 items)"
    ],
    "psychometric_properties": {
      "reliability": "Cronbach's alpha = 0.85-0.91",
      "validity": "Good construct validity and convergent validity",
      "test_retest_reliability": "r = 0.72-0.85"
    },
    "populations": ["Adolescents", "Adults", "Clinical populations"],
    "languages": ["English", "Multiple languages available"]
  },
  "questions": [
