  "study_desc": {
    "title_statement": {
      "idno": "MH.INST.PANAS",
      "title": "PANAS: Positive and Negative Affect Schedule",
      "subtitle": "20-item measure of positive and negative emotional states"
    },
    "study_info": {
      "abstract": "The PANAS is a 20-item self-report scale designed to measure positive affect (positive emotions, energy, enthusiasm) and negative affect (negative emotions, distress, dissatisfaction). Respondents rate how frequently they have experienced each emotion over a specified time period (past week or year). The scale is brief, reliable, and widely used in emotion research and clinical settings.",
      "keywords": [
        {
          "keyword": "positive affect"
        },
        {
          "keyword": "negative affect"
        },
        {
          "keyword": "emotional states"
        },
        {
          "keyword": "mood assessment"
        }
      ]
    }
  },
  "instrument_details": {
    "instrument_name": "PANAS",
    "full_name": "Positive and Negative Affect Schedule",
    "measurement_target": "Positive and negative emotional states",
    "num_items": 20,
    "response_scale": "5-point Likert (Very slightly or not at all, A little, Moderately, Quite a bit, Extremely)",
    "score_range": "10-50 per subscale (20-100 total)",
    "interpretation": "Positive Affect: 10-18=Low, 19-30=Moderate, 31-50=High; Negative Affect: 10-16=Low, 17-25=Moderate, 26-50=High",
    "subscales": [
      "Positive Affect (10 items): interested, excited, strong, enthusiastic, proud, alert, inspired, determined, attentive, active",
      "Negative Affect (10 items): distressed, upset, guilty, scared, hostile, irritable, ashamed, nervous, jittery, afraid"
    ],
    "psychometric_properties": {
      "reliability": "Cronbach's alpha = 0.86-0.90",
      "validity": "Good construct validity and convergent/discriminant validity",
      "test_retest_reliability": "r = 0.47-0.68"
    },
    "populations": ["General population", "Clinical samples", "Adolescents and adults"],
    "languages": ["English", "Multiple languages available"]
  },
