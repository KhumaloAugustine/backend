  "study_desc": {
    "title_statement": {
      "idno": "MH.INST.SCARED",
      "title": "SCARED: Screen for Child Anxiety Related Emotional Disorders",
      "subtitle": "41-item child self-report measure of anxiety disorders"
    },
    "study_info": {
      "abstract": "The SCARED is a 41-item self-report screening tool designed to identify anxiety disorders in children and adolescents (ages 8-18). It measures five types of anxiety: generalized anxiety disorder, social phobia, separation anxiety disorder, social anxiety disorder, and specific phobia. Each item is rated on a 3-point scale.",
      "keywords": [
        {
          "keyword": "childhood anxiety"
        },
        {
          "keyword": "anxiety screening"
        },
        {
          "keyword": "adolescent mental health"
        },
        {
          "keyword": "anxiety disorders"
        }
      ]
    }
  },
  "instrument_details": {
    "instrument_name": "SCARED - Child Version",
    "full_name": "Screen for Child Anxiety Related Emotional Disorders - Child Self-Report",
    "measurement_target": "Anxiety disorders in children and adolescents",
    "num_items": 41,
    "response_scale": "3-point Likert (0=Not true, 1=Somewhat true, 2=Very true)",
    "score_range": "0-82",
    "interpretation": "0-24: No anxiety; 25-49: Mild anxiety; 50-82: Moderate to severe anxiety",
    "subscales": [
      "Generalized Anxiety Disorder (9 items)",
      "Social Phobia (7 items)",
      "Separation Anxiety Disorder (8 items)",
      "Specific Phobia (8 items)",
      "Panic Disorder/Agoraphobia (13 items)"
    ],
    "psychometric_properties": {
      "reliability": "Cronbach's alpha = 0.80-0.90",
      "validity": "Excellent discriminant and concurrent validity",
      "sensitivity": "0.71-0.90",
      "specificity": "0.72-0.87"
    },
    "populations": ["Children ages 8-18", "Adolescents", "Clinical samples"],
    "languages": ["English", "Multiple languages available"]
  },
