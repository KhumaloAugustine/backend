      "idno": "MH.INST.PHQ9",
      "title": "PHQ-9: Patient Health Questionnaire",
      "subtitle": "9-item self-report measure of depressive symptoms"
    },
    "study_info": {
      "abstract": "The PHQ-9 is a 9-item self-report depression screening tool and severity measure. Each item corresponds to DSM-IV criteria for major depressive disorder. Items are rated on a 4-point scale assessing symptom frequency over the past two weeks. Widely used in primary care, mental health, and research settings.",
      "keywords": [
        {"keyword": "depression screening"},
        {"keyword": "depressive symptoms"},
        {"keyword": "primary care mental health"},
        {"keyword": "DSM-IV criteria"},
        {"keyword": "clinical assessment"}
      ]
    }
  },
  "instrument_details": {
    "instrument_name": "PHQ-9",
    "full_name": "Patient Health Questionnaire - 9 items",
    "measurement_target": "Depressive symptoms and major depressive disorder",
    "num_items": 9,
    "response_scale": "4-point Likert (0=Not at all, 1=Several days, 2=More than half, 3=Nearly every day)",
    "score_range": "0-27",
    "interpretation": "0-4: Minimal; 5-9: Mild; 10-14: Moderate; 15-19: Moderately severe; 20-27: Severe",
    "psychometric_properties": {
      "reliability": "Cronbach's alpha = 0.86-0.89",
      "validity": "High sensitivity (0.88) and specificity (0.85) for major depression",
      "sensitivity": "0.88",
      "specificity": "0.85"
    },
    "populations": ["General population", "Primary care patients", "Clinical samples", "Adolescents"],
    "languages": ["English", "Multiple languages available"]
  },
