  "study_desc": {
    "title_statement": {
      "idno": "MH.INST.BPRS",
      "title": "BPRS: Brief Psychiatric Rating Scale",
      "subtitle": "18-item clinician-rated measure of psychiatric symptoms"
    },
    "study_info": {
      "abstract": "The BPRS is an 18-item clinician-rated scale designed to assess the severity of psychiatric symptoms in adolescents and adults. Items assess both positive symptoms (hallucinations, delusions) and negative symptoms (emotional withdrawal, blunted affect). Widely used in clinical research and treatment monitoring for psychotic disorders.",
      "keywords": [
        {"keyword": "psychiatric symptoms"},
        {"keyword": "psychotic disorders"},
        {"keyword": "schizophrenia"},
        {"keyword": "positive symptoms"},
        {"keyword": "negative symptoms"}
      ]
    }
  },
  "instrument_details": {
    "instrument_name": "BPRS",
    "full_name": "Brief Psychiatric Rating Scale - 18 items",
    "measurement_target": "Psychiatric symptom severity",
    "num_items": 18,
    "response_scale": "7-point Likert (1=Not assessed to 7=Extremely severe)",
    "score_range": "18-126",
    "subscales": ["Positive Symptoms", "Negative Symptoms", "Depressive Symptoms", "Manic Symptoms"],
    "interpretation": "18-39: Minimally symptomatic; 40-60: Mildly symptomatic; 61-80: Moderately symptomatic; 80+: Severely symptomatic",
    "psychometric_properties": {
      "reliability": "Cronbach's alpha = 0.60-0.77",
      "validity": "Good agreement with clinical diagnoses",
      "sensitivity": "Variable by symptom domain"
    },
    "populations": ["Individuals with psychotic disorders", "Clinical samples", "Adolescents and adults"],
    "languages": ["English", "Multiple languages available"]
  },
  "questions": [
